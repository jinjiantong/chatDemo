<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/refreshlistview_container" >

    <RelativeLayout
        android:id="@+id/header"
        style="@style/refreshlistview_header" >

        <ImageView
            android:id="@+id/arrow"
            style="@style/refreshlistview_arrow"
            android:contentDescription="@string/refreshlistview_arrow" />

        <ProgressBar
            android:id="@+id/progress"
            style="@style/refreshlistview_progress"
            android:visibility="invisible" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >

            <TextView
                android:id="@+id/comment"
                style="@style/refreshlistview_comment" />

            <TextView
                android:id="@+id/date"
                style="@style/refreshlistview_date"
                android:layout_below="@id/comment"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>