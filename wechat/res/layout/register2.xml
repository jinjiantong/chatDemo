<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_height="44dp"
        android:layout_width="match_parent"
        android:background="#c11332"
        >
        <Button
            android:id="@+id/leftBarButton"
            android:layout_width="90dp"
            android:layout_height="44dp"
            android:drawableLeft="@drawable/btn_back_normal"
            android:background="@null"
            android:layout_centerVertical="true"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="@dimen/navbar_button_text_size"
            android:drawablePadding="-20dp"
            android:paddingLeft="12dp"
            android:onClick="ButtonClick"
            />
        
        <TextView 
            android:layout_width="wrap_content"
      		android:layout_height="wrap_content"
            android:text="注册信息"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="@dimen/navbar_title_size"
            />
        
        <Button
            android:id="@+id/rightBarButton"
            android:layout_width="65dp"
            android:layout_height="44dp"
            android:drawableRight="@drawable/btn_next_normal"
            android:background="@null"
            android:layout_centerVertical="true"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="@dimen/navbar_button_text_size"
           	android:layout_alignParentRight="true"
			android:paddingRight="12dp"
			android:drawablePadding="2dp"
			android:onClick="ButtonClick"
            />
    </RelativeLayout>

    <EditText
        android:id="@+id/editTextPass"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="18dp"
        android:layout_height="45dp"
        android:hint="登录密码"
        android:gravity="center_horizontal"
        android:textColorHint="#8f8f8f"
        android:textColor="#222222"
        android:textSize="@dimen/navbar_title_size" 
        android:inputType="numberPassword" >
        <requestFocus />
    </EditText>
    
    <EditText
        android:id="@+id/editTextNickName"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="18dp"
        android:layout_height="45dp"
        android:hint="昵称"
        android:gravity="center_horizontal"
        android:textColorHint="#8f8f8f"
        android:textColor="#222222"
        android:textSize="@dimen/navbar_title_size" 
        android:inputType="text" >
    </EditText>
    
    <EditText
        android:id="@+id/editTextIntro"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="18dp"
        android:layout_height="45dp"
        android:hint="介绍"
        android:gravity="center_horizontal"
        android:textColorHint="#8f8f8f"
        android:textColor="#222222"
        android:textSize="@dimen/navbar_title_size" 
        android:inputType="text" >
    </EditText>

</LinearLayout>
